<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane prefHeight="700.0" prefWidth="1000.0" styleClass="root-pane" stylesheets="@login.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jar.auth.LoginController">
   <children>
      <VBox alignment="CENTER" maxWidth="400.0" maxHeight="620.0" spacing="20" styleClass="login-card">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../assets/logo.png" />
               </image>
            </ImageView>

            <VBox alignment="CENTER" spacing="5">
               <Label styleClass="title-text" text="PAVILLON GOURMET" />
               <Label styleClass="subtitle-text" text="L'excellence à votre table" />
            </VBox>

            <VBox spacing="15">
               <children>
                  <Label styleClass="field-label" text="UTILISATEUR" />
                  <HBox alignment="CENTER_LEFT" spacing="10" styleClass="input-container">
                     <children>
                        <TextField fx:id="txtUser" promptText="Votre identifiant" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <Label styleClass="field-label" text="MOT DE PASSE" />
                  <HBox alignment="CENTER_LEFT" spacing="10" styleClass="input-container">
                     <children>
                        <PasswordField fx:id="txtPass" promptText="••••••••" style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>

                  <Button onAction="#handleLogin" prefHeight="45.0" prefWidth="Infinity" styleClass="login-button" text="SE CONNECTER" />
               </children>
            </VBox>

            <VBox alignment="CENTER" spacing="5">
               <Label text="Nouveau chez nous ?" textFill="#9ca3af" />
               <Hyperlink onAction="#creer_compte" styleClass="footer-link" text="Rejoindre le Pavillon" />
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>