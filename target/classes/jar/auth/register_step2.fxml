<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<StackPane styleClass="root-gradient" stylesheets="@register.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jar.auth.RegisterStep2Controller">
    
    <VBox alignment="CENTER">
        <VBox spacing="25" styleClass="white-card" maxWidth="400">
            <VBox spacing="8">
                <Text text="Sécurisez votre compte" styleClass="title-text"/>
                <Text text="Étape 2 sur 2 : Mot de passe" styleClass="subtitle-text"/>
                <StackPane alignment="CENTER_LEFT">
                    <Rectangle width="320" height="6" styleClass="progress-bar-track"/>
                    <Rectangle width="320" height="6" styleClass="progress-bar-fill"/>
                </StackPane>
            </VBox>

            <VBox spacing="15">
                <PasswordField fx:id="txtPass" promptText="Mot de passe" styleClass="soft-input"/>
                <PasswordField fx:id="txtConfirm" promptText="Confirmer le mot de passe" styleClass="soft-input"/>
            </VBox>

            <Button text="Terminer l'inscription" onAction="#finishRegister" maxWidth="Infinity" prefHeight="45" styleClass="btn-primary"/>
            
            <HBox alignment="CENTER">
                <Button text="← Revenir en arrière" onAction="#backToStep1" styleClass="btn-text"/>
            </HBox>
        </VBox>
    </VBox>
</StackPane>