<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #0f0f0f;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jar.user.ChoixPlatController">
   <children>
      <Pane prefHeight="100.0" prefWidth="1000.0" style="-fx-background-color: #1a1a1a;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Label layoutX="350.0" layoutY="30.0" text="CARTE DU RESTAURANT" textFill="#fccd4d">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <Button fx:id="btnRetour" layoutX="25.0" layoutY="35.0" onAction="#gererRetour" styleClass="btn-retour" text="← Retour" />
            <Label fx:id="lblSolde" layoutX="800.0" layoutY="35.0" text="Mon Solde : 0.00 €" textFill="#2ecc71">
   <font>
      <Font name="System Bold" size="16.0" />
   </font>
</Label>
         </children>
         
      </Pane>

      <TabPane layoutY="100.0" prefHeight="500.0" prefWidth="1000.0" side="LEFT" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
        <tabs>
          <Tab text="ENTRÉES">
            <content>
              <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                 <content>
                    <FlowPane fx:id="flowPaneEntrees" hgap="20.0" style="-fx-background-color: #0f0f0f;" vgap="20.0">
                       <padding>
                          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                       </padding>
                    </FlowPane>
                 </content>
              </ScrollPane>
            </content>
          </Tab>
          <Tab text="PLATS">
            <content>
              <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                 <content>
                    <FlowPane fx:id="flowPanePlats" hgap="20.0" style="-fx-background-color: #0f0f0f;" vgap="20.0">
                       <padding>
                          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                       </padding>
                    </FlowPane>
                 </content>
              </ScrollPane>
            </content>
          </Tab>
          <Tab text="BOISSONS">
   <content>
      <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
         <content>
            <FlowPane fx:id="flowPaneBoissons" hgap="20.0" vgap="20.0" style="-fx-background-color: #0f0f0f;">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </FlowPane>
         </content>
      </ScrollPane>
   </content>
</Tab>
        </tabs>
      </TabPane>

      <HBox alignment="CENTER_RIGHT" layoutY="600.0" prefHeight="100.0" prefWidth="1000.0" spacing="30.0" style="-fx-background-color: #1a1a1a;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Label fx:id="lblTotal" text="Total : 0.00 €" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Button fx:id="btnValiderCommande" onAction="#validerCommande" prefHeight="50.0" prefWidth="200.0" text="COMMANDER" />
         </children>
         <padding>
            <Insets right="50.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
