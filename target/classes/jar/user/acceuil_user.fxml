<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="700.0" prefWidth="1000.0" styleClass="main-bg" stylesheets="@acceuil_user.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jar.user.AccueilUserController">
   <children>
      <BorderPane>
         <top>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="20" styleClass="header-bar" BorderPane.alignment="CENTER">
               <padding>
                  <Insets left="40.0" right="40.0" />
               </padding>
               <children>
                  <VBox alignment="CENTER_LEFT">
                     <children>
                        <Label fx:id="lblBienvenue" text="BIENVENUE, ..." textFill="WHITE">
                           <font><Font name="System Bold" size="28.0" /></font>
                        </Label>
                        <Label text="L'excellence gastronomique vous attend" textFill="#94a3b8" />
                     </children>
                  </VBox>
                  <Region HBox.hgrow="ALWAYS" />
                  <VBox alignment="CENTER" prefHeight="70.0" prefWidth="180.0" styleClass="wallet-badge">
                     <children>
                        <Label text="VOTRE SOLDE" textFill="#fbbf24" style="-fx-font-size: 10; -fx-font-weight: bold;" />
                        <Label fx:id="lblSolde" text="0.00 €" textFill="WHITE">
                           <font><Font name="System Bold" size="22.0" /></font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </top>

         <center>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <GridPane alignment="CENTER" hgap="30.0" vgap="30.0" maxWidth="800.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="220.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="220.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Button alignment="CENTER" contentDisplay="TOP" maxWidth="Infinity" maxHeight="Infinity" onAction="#allerVersReservation" styleClass="menu-card, card-gold" text="NOUVELLE&#10;RÉSERVATION" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        
                        <Button alignment="CENTER" contentDisplay="TOP" maxWidth="Infinity" maxHeight="Infinity" onAction="#allerVersHistorique" styleClass="menu-card" text="MES&#10;RÉSERVATIONS" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        
                        <Button alignment="CENTER" contentDisplay="TOP" maxWidth="Infinity" maxHeight="Infinity" onAction="#allerVersPortefeuille" styleClass="menu-card" text="MON&#10;PORTEFEUILLE" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        
                        <Button alignment="CENTER" contentDisplay="TOP" maxWidth="Infinity" maxHeight="Infinity" onAction="#ouvrirProfil" styleClass="menu-card" text="MON&#10;PROFIL" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
         </center>

         <bottom>
            <HBox alignment="CENTER" prefHeight="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Button onAction="#seDeconnecter" prefHeight="45.0" prefWidth="200.0" styleClass="btn-logout" text="DÉCONNEXION" />
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</StackPane>