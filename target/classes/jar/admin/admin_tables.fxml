<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox spacing="30.0" styleClass="main-container" stylesheets="@admin_tables.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jar.admin.AdminTablesController">
    
    <Label styleClass="page-title" text="Gestion des Tables" />

    <HBox spacing="50.0" styleClass="form-card" alignment="CENTER">
        <TextField fx:id="txtCapacite" prefWidth="200" promptText="Capacité" styleClass="input-field" />
        
        <ComboBox fx:id="comboStatut" prefWidth="200" promptText="Statut" styleClass="combo-box">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="LIBRE" />
                    <String fx:value="OCCUPEE" />
                    <String fx:value="MAINTENANCE" />
                </FXCollections>
            </items>
        </ComboBox>

        <Button fx:id="btnValider" onAction="#ajouterTable" prefHeight="40" prefWidth="150" styleClass="btn-gold" text="ENREGISTRER" />
    </HBox>

    <TableView fx:id="tabTables" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" />
            <TableColumn fx:id="colCapacite" text="CAPACITÉ" />
            <TableColumn fx:id="colStatut" text="STATUT" />
            <TableColumn fx:id="colAction" prefWidth="250.0" text="ACTIONS" />
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
    </TableView>
</VBox>