<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" styleClass="root-panel" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="jar.admin.AdminReservationsController">
    
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 0 0 10 0;">
        <Label text="REGISTRE DES RÉSERVATIONS" textFill="WHITE">
            <font><Font name="System Bold" size="28.0" /></font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Label fx:id="lblCompteur" text="0 réservations trouvées" textFill="#94a3b8" />
    </HBox>

    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
        <content>
            <VBox fx:id="vboxReservations" spacing="15" style="-fx-background-color: transparent;">
                <padding>
                    <Insets right="15" bottom="15" />
                </padding>
            </VBox>
        </content>
    </ScrollPane>
</VBox>