<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="30.0" style="-fx-background-color: transparent;" stylesheets="@admin_style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="jar.admin.AdminPlatsController">
    
    <Label styleClass="page-title" text="Gestion du Menu" />

    <VBox spacing="15.0" styleClass="form-card">
        <TextField fx:id="txtNom" promptText="Nom du plat" styleClass="input-field" />
        <TextField fx:id="txtPrix" promptText="Prix (€)" styleClass="input-field" />
        <TextField fx:id="txtQte" promptText="Quantité en stock" styleClass="input-field" />
        <ComboBox fx:id="comboCat" maxWidth="Infinity" promptText="Choisir une catégorie" styleClass="input-field" />
        
        <Button maxWidth="Infinity" onAction="#ajouterPlat" styleClass="btn-gold" text="AJOUTER LE PLAT" />
    </VBox>

    <TableView fx:id="tabPlats" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNom" text="NOM DU PLAT" />
            <TableColumn fx:id="colPrix" text="PRIX" />
            <TableColumn fx:id="colQte" text="STOCK" />
            <TableColumn fx:id="colAction" text="ACTION" />
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
    </TableView>
</VBox>
